@using MvcCv.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yeteneklerim/YetenekEkle/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br /><br />
                                <table class="table table-bordered">

                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 70px">Oran</th>
                                            <th style="width: 110px">Sil</th>
                                            <th style="width: 110px">Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Yetenek</td>
                                                @if (x.Oran >= 95 && x.Oran < 100)
                                                {
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-green" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge bg-gradient-green">@x.Oran%</span></td>
                                                }
                                                @if (x.Oran >= 80 && x.Oran < 95)
                                                {
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-blue" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge bg-gradient-blue">@x.Oran%</span></td>
                                                }
                                                @if (x.Oran >= 70 && x.Oran < 80)
                                                {
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-cyan" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge bg-gradient-gray">@x.Oran%</span></td>
                                                }
                                                @if (x.Oran >= 50 && x.Oran < 70)
                                                {
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-gray" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge bg-gradient-cyan">@x.Oran%</span></td>
                                                }
                                                @if (x.Oran < 50)
                                                {
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-danger" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge bg-gradient-danger">@x.Oran%</span></td>
                                                }
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yeteneklerim/YetenekSil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yeteneklerim/YetenekDuzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                            </tr>


                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

