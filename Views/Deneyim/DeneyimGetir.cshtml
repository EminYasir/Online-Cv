@model MvcCv.Models.Entity.TblDeneyim
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <h3>Deneyim Güncelleme Sayfası</h3>
                            <br />
                            <form method="post">
                                @Html.Label("Deneyim ID")
                                @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
                                <br />
                                @Html.Label("Başlık")
                                @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                <br />
                                @Html.Label("Alt Başlık")
                                @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })
                                <br />
                                @Html.Label("Tarih")
                                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                <br />
                                @Html.Label("Açıklama")
                                @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
                                <br />
                                <button class="btn btn-warning">Güncelleme</button>
                            </form>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>
