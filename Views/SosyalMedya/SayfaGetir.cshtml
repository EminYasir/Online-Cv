@model MvcCv.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h1 class="card-title">Sosyal Medya Düzenleme</h1>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form method="post">
                                    @Html.Label("Ad")
                                    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                                    <br />
                                    @Html.Label("Alan")
                                    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
                                    <br />
                                    @Html.Label("Bölüm")
                                    @Html.TextBoxFor(x => x.icon, new { @class = "form-control" })
                                    <br />
                                    <button class="btn btn-info">Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>