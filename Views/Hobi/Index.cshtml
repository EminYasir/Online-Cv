@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <h2>Hobi Düzenleme Sayfası</h2>
                            <br />
                            <form method="post">
                                @foreach (var x in Model)
                                {
                                    <label>Açıklama 1</label>
                                    <textarea class="form-control" name="Aciklama1" rows="7">@x.Aciklama1</textarea>
                                    <label>Açıklama 2</label>
                                    <textarea class="form-control" name="Aciklama2" rows="7">@x.Aciklama2</textarea>
                                }
                                <br />
                                <button class="btn btn-success">Güncelle</button>
                            </form>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>