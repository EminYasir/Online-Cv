@using MvcCv.Models.Entity
@model List<TblHakkimda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <h2>Hakkımda Düzenleme Sayfası</h2>

                            <br />
                            <form method="post">
                                @foreach (var x in Model)
                                {
                                    <label>Ad</label>
                                    <input class="form-control" name="Ad" placeholder="Adınız Giriniz" value="@x.Ad" />
                                    <label>Soyad</label>
                                    <input class="form-control" name="Soyad" placeholder="Soyad Giriniz" value="@x.Soyad" />
                                    <label>Adres</label>
                                    <textarea class="form-control" name="Adres" rows="3">@x.Adres</textarea>
                                    <label>Mail</label>
                                    <input class="form-control" name="Mail" placeholder="Mail Giriniz" value="@x.Mail" />
                                    <label>Telefon</label>
                                    <input class="form-control" name="Telefon" placeholder="Telefon Giriniz" value="@x.Telefon" />
                                    <label>Aciklama</label>
                                    <textarea class="form-control" name="Aciklama" rows="7">@x.Aciklama</textarea>
                                    <label>Resim</label>
                                    <br />
                                    <img src="@x.Resim" style="width:100px; height:auto;" />
                                    <br />
                                    <br />
                                    <input class="form-control" name="Resim" placeholder="Resim Giriniz" value="@x.Resim" />
                                }
                                <br />
                                <button class="btn btn-success">Güncelle</button>
                                <br />
                                <br />
                                <br />

                            </form>

                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>
